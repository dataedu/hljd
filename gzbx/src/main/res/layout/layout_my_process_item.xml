<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:orientation="horizontal" >
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <View
	        android:id="@+id/topview"
	        android:layout_height="26dip"
	        android:layout_width="1dip"
	        android:background="@color/tro_line"
	        android:layout_marginLeft="34dip"/>
	    <ImageView
	        android:id="@+id/tro_imageview1" 
	        android:layout_width="10dip"
	        android:layout_height="10dip"
	        android:src="@drawable/processed"
	        android:layout_marginLeft="30dip"/>
	    <View
	        android:id="@+id/bottomview"
	        android:layout_height="match_parent"
	        android:layout_width="1dip"
	        android:background="@color/tro_line"
	        android:layout_marginLeft="34dip"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="30dp"
	    android:background="@color/white">
	   	 <LinearLayout 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:gravity="center">
			   <LinearLayout 
			       android:layout_width="30dp"
			       android:layout_height="30dp"
			       android:background="@drawable/radius"
			       android:gravity="center"
			       android:layout_margin="6dip">
			       <TextView
			           android:id="@+id/tro_name"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="王\n旭伟"
			           android:textColor="@color/white"
			           android:textSize="10sp" 
			           android:gravity="center"/>
			   </LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="24dp"
			    android:orientation="horizontal">
			       <TextView
		   		    android:id="@+id/tro_title"
		   		    android:layout_width="0dp"
		   		    android:layout_height="match_parent"
		   		    android:layout_weight="0.7"
		   		    android:text="王旭伟老师的报修"
		   		    android:textColor="@color/tro_malfunction"
		   		    android:textSize="15sp"
		   		    android:gravity="fill_vertical"/>
			       <TextView
		   		    android:id="@+id/tro_time"
		   		    android:layout_width="0dp"
		   		    android:layout_height="match_parent"
		   		     android:layout_weight="0.3"
		   		    android:text="2015.11.24"
		   		    android:textColor="@color/tro_status"
		   		    android:textSize="9sp"
		   		    android:gravity="center"
		   		    android:layout_marginRight="6dip"/>
			</LinearLayout>
	   		
	   		<TextView
	   		    android:id="@+id/tro_status"
	   		    android:layout_width="match_parent"
	   		    android:layout_height="18dp"
	   		    android:text="已处理"
	   		    android:textColor="@color/tro_status"
	   		    android:textSize="12sp"/>
	   		<TextView
	   		    android:id="@+id/tro_repairstatus"
	   		    android:layout_width="match_parent"
	   		    android:layout_height="wrap_content"
	   		    android:lineSpacingMultiplier="0.9"
	   		    android:text="维修情况：空调已经修理好空调已经修理好"
	   		    android:textColor="@color/red"
	   		    android:textSize="13sp"
	   		    android:layout_marginRight="6dip"
	   		    android:visibility="gone"
	   		    android:layout_marginBottom="2dp"/>
	   </LinearLayout>
	</LinearLayout>
	
</LinearLayout>